# ---------------------------
# Git internals
# ---------------------------
# glob
.git/
# regex
^\.git/

# ---------------------------
# System / IDE
# ---------------------------
# glob
.DS_Store
Thumbs.db
*.swp
*.swo
*.bak
*.tmp
*.log
*.out
# regex
^\.DS_Store$
^Thumbs\.db$
.*\.swp$
.*\.swo$
.*\.bak$
.*\.tmp$
.*\.log$
.*\.out$

# IDE configs
# glob
.vscode/
.idea/
*.iml
# regex
^\.vscode/
^\.idea/
.*\.iml$

# ---------------------------
# Python
# ---------------------------
# glob
__pycache__/
*.pyc
*.pyo
*.pyd
.venv/
venv/
env/
*.egg-info/
.eggs/
# regex
^__pycache__/
.*\.pyc$
.*\.pyo$
.*\.pyd$
^(\.venv|venv|env)/
.*\.egg-info/
^\.eggs/

# ---------------------------
# Node.js / JavaScript / TypeScript
# ---------------------------
# glob
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
package-lock.json
yarn.lock
pnpm-lock.yaml
# regex
^node_modules/
npm-debug\.log.*
yarn-(debug|error)\.log.*
pnpm-debug\.log.*
package-lock\.json$
yarn\.lock$
pnpm-lock\.yaml$

# ---------------------------
# Java / Kotlin
# ---------------------------
# glob
*.class
*.jar
*.war
*.ear
*.ser
*.idx
*.dat
*.hprof
target/
out/
build/
# regex
.*\.class$
.*\.jar$
.*\.war$
.*\.ear$
.*\.ser$
.*\.idx$
.*\.dat$
.*\.hprof$
^target/
^out/
^build/

